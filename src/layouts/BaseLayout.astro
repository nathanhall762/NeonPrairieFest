---
import { ViewTransitions } from 'astro:transitions';

const title = 'Neon Prairie Fest Artists';
---

<!doctype html>
<html
  lang='en'
  class='dark bg-neutral-9 font-sans font-light text-neutral-9 scroller'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content=''
    />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>
      {title}
    </title>
    <ViewTransitions />
  </head>
  <body class='flex flex-col min-h-screen justify-stretch items-center'>
    <header class="hidden sm:inline">
      <img
        src='/NeonPrairieFestHeaderMockup.webp'
        alt='Neon Prairie Fest Header Mockup'
        class="w-screen object-cover"
      />
    </header>
    <header class="inline sm:hidden">
      <img
        src='/NeonPrarieMobileHeader.webp'
        alt='Neon Prairie Fest Header Mockup'
      />
    </header>
    <main class="w-screen">
      <!-- <div class="inset-0 bg-[var(--color-background-main)] bg-opacity-60"> -->
      <slot />
      <!-- </div> -->
    </main>

    <footer class="fixed bottom-0 bg-[var(--color-background-main)] z-50">
      <img
        src='/NeonPrairieFestFooterMockup.webp'
        alt='Neon Prairie Fest Footer Mockup'
        class="w-screen object-cover"
      />
    </footer>
    <style is:global>
      :root {
        font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
        line-height: 1.5;
        font-weight: 400;

        --color-background-main: #360046;
        --color-background-main-trans: hsla(249, 11%, 12%, 0.8);
        --color-background-alt: hsl(249, 11%, 15%);
        --color-primary: #ff722e;
        --color-secondary: #1d324f;
        --color-accent: #00E6ED;

        --color-text-primary: #e9f1f7;
        --color-text-secondary: #c9d1d9;
        --color-text-inverse: #fff;

        --color-success: #2ea44f;
        --color-danger: #cb2431;
        --color-warning: #fca321;

        --color-shadow: rgba(0, 0, 0, 0.1);
        --color-border: var(--color-background-alt);

        --bandcamp-color: #1da1f2;
        --spotify-color: #1db954;
        --youtube-color: #ff0000;
        --soundcloud-color: #ff5500;
        --facebook-color: #1877f2;
        --tiktok-color: #000000;
        --twitch-color: #9146ff;
        --threads-color: #808080;
        --instagram-gradient: linear-gradient(
          45deg,
          #405de6,
          #5851db,
          #833ab4,
          #c13584,
          #e1306c,
          #fd1d1d,
          #f56040
        );

        cursor: url(/NeonPrairieCursor.png) 16 16, auto;

        color: var(--color-text-primary);
        background-color: var(--color-background-main);

        --animation-speed-slow: 2s;
        --animation-speed-medium: 0.5s;
        --animation-speed-fast: 0.1s;

        font-synthesis: none;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        -webkit-text-size-adjust: 100%;
      }

      /* main {
        background-image: url('/white-grungy-wall-textured-background.webp');
      } */

      a {
        font-weight: 500;
        color: var(--color-primary);
        text-decoration: inherit;
      }

      a:hover {
        color: var(--color-accent);
      }

      body {
        margin: 0;
        place-items: center;
        min-width: 320px;
        min-height: 100vh;
      }

      p {
        margin: 0;
      }

      h1 {
        font-size: 3.2em;
        line-height: 1.1;
      }

      h2 {
        margin: 0;
      }
      iframe {
        border: none;
        opacity: 0.8;
      }

      .spacer {
        height: 8vh;
      }

      .header-wrapper {
        position: fixed;
        width: 100vw;
        height: 8vh;
        z-index: 98;
        background-color: var(--color-background-alt);
        box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.25);
        @media (max-width: 1000px) {
          height: 8vh;
        }
      }

      .logo {
        height: 12vh;
        width: 12vh;
        border-radius: 100%;
        position: fixed;
        padding: 0.25em;
        margin-left: 0.5em;
        box-sizing: border-box;
        z-index: 99;
        @media (max-width: 1000px) {
          box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.25);
          margin-left: 0.5em;
          height: 8vh;
          width: 8vh;
        }
      }

      .short-title-wrapper {
        width: 100vw;
        display: flex;
        justify-content: center;
      }

      .short-title {
        padding: 0;
        margin: 0;
        text-align: center;
        display: none;
        font-size: 20px;
        height: 100%;
        position: absolute;
        justify-content: center;
        align-items: center;
        color: var(--color-text-primary);
      }

      .title {
        color: var(--color-primary);
        font-size: 2.5rem;
        padding: 0;
        @media (max-width: 800px) {
          display: none;
        }
      }

      .title-link {
        @media (max-width: 800px) {
          display: none;
        }
        display: flex;
        align-items: center;
        @media (max-width: 1000px) {
          padding-left: 15vh;
        }
      }

      .title-link h2 {
        display: flex;
        font-size: 1.3rem;
        color: var(--color-text-primary);
        padding: 0;
        margin: 0 0 0 2rem;
        opacity: 80%;
        transition: all var(--animation-speed-medium) ease-in-out;
        @media (max-width: 1100px) {
          display: none;
        }
        &:hover {
          opacity: 100%;
        }
      }

      .top-header {
        display: flex;
        justify-content: space-between;
        padding-left: 11vw;
        margin-right: 0;
        height: 8vh;
        align-items: center;
        @media (max-width: 1000px) {
          height: 8vh;
          width: 100vw;
          padding: 0;
        }
      }

      .navbar {
        display: none;
      }

      .card-container {
        display: none;
      }

      .add-button {
        display: none;
      }

      .genreFilter {
        display: none;
      }

      .heroWrapper {
        display: none;
      }
    </style>
    <!-- custom animation keyframes and other global stuffs -->
  </body>
</html>
